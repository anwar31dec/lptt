<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="ID"
                     />
            <field
                    type="text"
                    name="class"
                    id="class"
                    label="Class"
                    description="Class" />
            <field
                    type="text"
                    name="defaultActive"
                    id="defaultActive"
                    default="1"
                    label="Default Active"
                    description="Default Active Item"
                    />
            <field
                    type="radio"
                    name="style"
                    id="style"
                    class="btn-group btn-group-yesno"
                    default="tab"
                    label="Style"
                    description="Style" >
                <option value="tab">Tab</option>
                <option value="pill">Pill</option>
            </field>
            <field
                    type="radio"
                    name="fade"
                    id="fade"
                    class="btn-group btn-group-yesno"
                    default="0"
                    label="Use Fade Effect"
                    description="Use Fade Effect" >
                <option value="1">Yes</option>
                <option value="0">No</option>
            </field>
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuratabtoggle" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="all"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>