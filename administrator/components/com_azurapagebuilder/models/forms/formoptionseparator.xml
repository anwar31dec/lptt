<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            <field
                    type="list"
                    name="wrapper"
                    id="wrapper"
                    default="div"
                    label="Wrapper"
                    description="Wrapper">
                <option value="div">div</option>
                <option value="hr">hr</option>
                <option value="br">br</option>
            </field>
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="Wrapper ID"
                    description="Wrapper ID" />

            <field
                    type="text"
                    name="class"
                    id="class"
                    default="clearfix"
                    label="Wrapper Class"
                    description="Wrapper Class"
                    />
            <field
                    type="text"
                    name="text"
                    id="text"
                    label="Separator Text"
                    description="Separator Text" />

            <field
                    type="AzuraFontIcon"
                    name="iconClass"
                    id="iconClass"
                    class="input-medium"
                    label="Separator Icon Class"
                    description="Separator Icon Class"
                    />
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azuraseparator" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="all"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>