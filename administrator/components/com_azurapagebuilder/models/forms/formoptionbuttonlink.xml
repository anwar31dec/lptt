<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="elementAttrs">
        <fieldset name="elementAttrsFieldSet">
            
            <field
                    type="text"
                    name="id"
                    id="id"
                    label="ID"
                    description="ID" />

            <field
                    type="text"
                    name="class"
                    id="class"
                    label="Extra Class"
                    description="Extra Class"
                    />
            <field
                    type="text"
                    name="text"
                    id="text"
                    label="Link Text"
                    description="Link Text" />
            <field
                    type="AzuraMedia"
                    name="image"
                    id="image"
                    label="Link Image"
                    class="input-small"
                    preview="false"
                    description="Link Image" />
            <field
                    type="text"
                    name="link"
                    id="link"
                    default=""
                    label="Link"
                    description="Link" />
            <field
                    type="text"
                    name="title"
                    id="title"
                    label="Link Title"
                    description="Link Title" />
            
            <field
                    type="list"
                    name="target"
                    id="target"
                    label="Target"
                    default=""
                    description="Target">
                <option value="">Select Target</option>
                <option value="_blank">New window</option>
                <option value="_self">Current window</option>
                <option value="_parent">Parent window</option>
            </field>
            <field 
                name="layout" label="Shortcode Layout"  description="Shortcode Layout" type="AzuraShortcodelayout" shortcode="azurabuttonlink" client="site"/>
        </fieldset>
    </fields>
    <fields name="elementSettings">
        <fieldset name="elementSettingsFieldSet">
            <field
                    type="AzuraElementSetting"
                    name="showStyleTab"
                    setting="true"
                    default="true"/>
            <field
                    type="AzuraElementSetting"
                    name="numberLeftSettings"
                    setting="6"
                    default="all"/>
            <field
                    type="AzuraElementSetting"
                    name="contentFirst"
                    setting="false"
                    default="false"/>
        </fieldset>
    </fields>
</form>